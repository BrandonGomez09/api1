{
  "compilerOptions": {
    "target": "es6",                // Cambiado a es6 para aprovechar las características modernas de JavaScript
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,           // Para evitar errores en archivos de definición de tipos de terceros
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types"         // Asegura que TypeScript busque tipos en node_modules
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
